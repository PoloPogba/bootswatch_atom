<head> 
 <link rel="stylesheet" type="text/css" href="style.css">


</head>


<h2>Sign up</h2>

<center>
  <fieldset>
    
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    

    <div class="form-group">
    <%= f.label :email %></br />
   <input class="form-control" <%= f.email_field :email, autofocus: true, autocomplete: "email" %> 
   
     <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>


    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
   <input type="password" class="form-control" <%= f.password_field :password, autocomplete: "new-password" %>
      
    </div>



 <div class="form-group">
      <label for="exampleInputPassword1">Password Confirmation</label>
      <%= f.label :password_confirmation %>
      <input type="password" class="form-control" <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

       
    
    <%= f.submit "Sign up" %>
  <%end%>
  </fieldset>
  
</form>
</center>